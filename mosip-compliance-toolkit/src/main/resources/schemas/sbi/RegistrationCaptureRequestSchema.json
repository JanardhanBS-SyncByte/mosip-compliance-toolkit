{
	"$schema": "https://json-schema.org/draft/2019-09/schema#",
	"$id": "http://mosip-compliance-toolkit.com/schemas/RegistrationCapureRequestSchema.json",
	"title": "Registration Capture Request Schema",
	"description": "Registration Capture Request Schema",
	"type": "object",
	"properties": {
		"env": {
			"type": "string",
			"enum": [
				"Staging",
				"Developer",
				"Pre-Production",
				"Production"
			]
		},
		"purpose": {
			"type": "string",
			"enum": [
				"Auth",
				"Registration"
			]
		},
		"specVersion": {
			"type": "string",
			"enum": [
				"0.9.5",
				"1.0.0"
			]
		},
		"timeout": {
			"$ref": "#/definitions/non-empty-string",
			"pattern": "[0-9]$"
		},
		"captureTime": {
			"type": "string",
			"format": "date-time",
			"description": "We expect YYYY-MM-ddTHH:mm:SSZ"
		},
		"transactionId": {
			"$ref": "#/definitions/non-empty-string"
		},
		"bio": {
			"type": "array",
			"items": [
				{
					"type": "object",
					"properties": {
						"type": {
							"type": "string",
							"enum": [
								"Finger",
								"Iris",
								"Face"
							]
						},
						"count": {
							"type": "number",
							"maximum": 4
						},
						"bioSubType": {
							"type": "array"
						},
						"exception": {
							"type": "array"
						},
						"requestedScore": {
							"type": "string",
							"pattern": "^[0-9]+$",
                            "minLength": 1, 
                            "maxLength": 3
                        },
						"deviceId": {
							"$ref": "#/definitions/non-empty-string"
						},
						"deviceSubId": {
							"type": "string",
							"enum": [
								"0",
								"1",
								"2",
								"3"
							]
						},
						"previousHash": {
							"type": "string"
						}
					},
					"definitions": {
						"non-empty-string": {
							"type": "string",
							"minLength": 1
						}
					}
				}
			],
			"allOf": [
				{
					"if": {
						"properties": {
							"type": {
								"const": "Finger"
							}
						}
					},
					"then": {
						"properties": {
							"bioSubType": {
								"type": "array",
								"enum": [
									"Left IndexFinger",
									"Left MiddleFinger",
									"Left RingFinger",
									"Left LittleFinger",
									"Left Thumb",
									"Right IndexFinger",
									"Right MiddleFinger",
									"Right RingFinger",
									"Right LittleFinger",
									"Right Thumb",
									"UNKNOWN"
								]
							}
						}
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"const": "Iris"
							}
						}
					},
					"then": {
						"properties": {
							"bioSubType": {
								"type": "array",
								"enum": [
									"Left",
									"Right",
									"UNKNOWN"
								]
							}
						}
					}
				},
				{
					"if": {
						"properties": {
							"type": {
								"const": "Face"
							}
						}
					},
					"then": {
						"properties": {
							"bioSubType": {
								"type": "array",
								"enum": [
									null
								]
							}
						}
					}
				}
			],
			"required": [
				"type",
				"count",
				"bioSubType",
				"exception",
				"requestedScore",
				"deviceId",
				"deviceSubId",
				"previousHash"
			]
		},
		"customOpts": {
			"type": [
				"null",
				"string"
			]
		}
	},
	"required": [
		"env",
		"purpose",
		"specVersion",
		"timeout",
		"captureTime",
		"transactionId",
		"bio"
	],
	"definitions": {
		"non-empty-string": {
			"type": "string",
			"minLength": 1
		}
	}
}